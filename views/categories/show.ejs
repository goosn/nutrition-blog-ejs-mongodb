    <h2>Articles In This Category<h2>
        <% for(var i= 0; i <category.posts.length; i++) { %>          
            <div class='col-sm-8 col-sm-offset-2 featuredArticle'>
                <h2 class='blogText featuredArticleText'>
                
                  <a href="/blog/<%= category.posts[i]._id %>">
                    <span class="postImage" style="background-image: url('<%= category.posts[i].img %>');">
                      <%=category.posts[i].title%>
                    </span>
                  </a>

                </h2>
            </div>
          <!--console.log(category.posts.length);-->
